#include <stdio.h>

void moveZeroes(int arr[], int n) {
    int pos = 0; // Position to place the next non-zero element

    // Step 1: Move all non-zero elements to the front
    for(int i = 0; i < n; i++) {
        if(arr[i] != 0) {
            arr[pos] = arr[i];
            pos++;
        }
    }

    // Step 2: Fill the remaining positions with zero
    while(pos < n) {
        arr[pos] = 0;
        pos++;
    }
}

int main() {
    int arr[] = {0, 1, 0, 3, 12};
    int n = sizeof(arr) / sizeof(arr[0]);

    printf("Original array: ");
    for(int i = 0; i < n; i++)
        printf("%d ", arr[i]);
    printf("\n");

    moveZeroes(arr, n);

    printf("Array after moving zeroes: ");
    for(int i = 0; i < n; i++)
        printf("%d ", arr[i]);
    printf("\n");

    return 0;
}
